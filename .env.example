# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# News API (newsapi.org에서 무료로 발급 가능)
NEWS_API_KEY=your_news_api_key_here

# Naver API (developers.naver.com에서 발급)
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# YouTube API (Google Cloud Console에서 발급)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Twitter API v2 (현재는 유료)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API (reddit.com/prefs/apps에서 발급)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# 프록시 설정 (선택 사항)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# 로깅 설정 (선택 사항)
# LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# 기본 언어 및 타임존 설정
LOCALE=ko
TIMEZONE=540  # 서울 GMT+9

# 출력 설정 (선택 사항)
# OUTPUT_DIR=results  # 결과 저장 디렉토리
# OUTPUT_FORMAT=json  # json, csv, excel 중 하나

# 캐시 설정 (선택 사항)
# CACHE_DIR=.cache  # 캐시 저장 디렉토리
# CACHE_TTL=300     # 캐시 유효 시간(초)